generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                Int    @id @default(autoincrement())
  email             String @unique
  password          String
  name              String
  favouriteCategory String

  reviews        Reviews[]
  favoriteRoutes FavoriteRoute[]
}

model Reviews {
  id        Int      @id @default(autoincrement())
  userId    Int
  placeId   Int
  rating    Int
  comment   String
  createdAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id])
  place Place @relation(fields: [placeId], references: [id])
}

model Category {
  id   Int    @id @default(autoincrement())
  name String @unique

  places Place[]
}

model Place {
  id          Int    @id @default(autoincrement())
  name        String
  description String
  rating      Int
  coordinates Json?

  reviews     Reviews[]
  categories  Category[]
  routePlaces RoutePlaces[]
}

model Route {
  id          Int      @id @default(autoincrement())
  uuid        String   @unique @default(uuid())
  name        String
  description String
  category    String
  coordinates Json?
  createdAt   DateTime @default(now())

  routePlaces   RoutePlaces[]
  favoriteUsers FavoriteRoute[]
}

model RoutePlaces {
  id      Int @id @default(autoincrement())
  routeId Int
  placeId Int
  order   Int

  route Route @relation(fields: [routeId], references: [id])
  place Place @relation(fields: [placeId], references: [id])

  @@unique([routeId, placeId])
}

model FavoriteRoute {
  id      Int      @id @default(autoincrement())
  userId  Int
  routeId Int
  addedAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id])
  route Route @relation(fields: [routeId], references: [id])

  @@unique([userId, routeId])
}
